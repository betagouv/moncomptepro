{
  "compilerOptions": {
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "Preserve"
  },
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["./src/**/*"]
}
