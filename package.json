{
  "name": "moncomptepro",
  "version": "1.0.0",
  "main": "src/index.js",
  "engines": {
    "node": ">=16.17.1"
  },
  "scripts": {
    "lint": "prettier --write */*.js",
    "start": "node build/index.js",
    "dev": "concurrently \"npm:watch-js\" \"npm:watch-node\" \"npm:watch-ejs\"",
    "build": "npm run build-transpile && npm run build-migrate && npm run build-copy-views && npm run build-copy-assets",
    "build-transpile": "tsc",
    "build-migrate": "node-pg-migrate up",
    "build-generate-keys": "ts-node scripts/generate-keys.js",
    "build-copy-views": "bash -c 'cp -r src/views build/views'",
    "build-copy-assets": "bash -c 'cp node_modules/choices.js/public/assets/{scripts/choices.min.js,styles/choices.min.css} public/' && bash -c 'cp -r node_modules/@gouvfr/dsfr/dist/{dsfr.min.css,fonts,icons,utility} public/'",
    "import": "ts-node scripts/import.js",
    "update-organization-info": "ts-node --files scripts/update-organizations-info.ts",
    "migrate": "node-pg-migrate",
    "load-fixtures": " node-pg-migrate up && psql -v ON_ERROR_STOP=1 -f scripts/fixtures.sql && npm run update-organization-info 2000",
    "load-ci-fixtures": "node-pg-migrate up && psql -v ON_ERROR_STOP=1 -f scripts/ci-fixtures.sql && npm run update-organization-info 2000",
    "test:lint": "prettier */*.js --list-different",
    "test": "DO_NOT_VALIDATE_MAIL=False ts-mocha -p tsconfig.json test/*.ts test/*.js",
    "watch-js": "tsc --watch",
    "watch-node": "nodemon --watch build --ext js,ejs --quiet build/index.js",
    "watch-ejs": "CHOKIDAR_USEPOLLING=true copy-and-watch --clean --watch \"src/views/**/*.ejs\" src/views/*.ejs build/views/"
  },
  "license": "MIT",
  "dependencies": {
    "@gouvfr/dsfr": "^1.8.5",
    "@panva/jose": "^1.9.3",
    "@sentry/node": "^7.46.0",
    "@sentry/tracing": "^7.46.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/csurf": "^1.11.2",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/http-errors": "^2.0.1",
    "@types/lodash": "^4.14.192",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/oidc-provider": "^7.14.0",
    "@zootools/email-spell-checker": "^1.12.0",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "choices.js": "^10.2.0",
    "connect-redis": "^6.1.3",
    "csurf": "^1.11.0",
    "csv": "^5.5.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-session": "^1.17.3",
    "helmet": "^3.23.3",
    "http-errors": "^2.0.0",
    "ioredis": "^5.3.1",
    "is-disposable-email-domain": "^1.0.7",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.6",
    "node-pg-migrate": "^6.2.2",
    "oidc-provider": "^7.11.5",
    "pg": "^8.10.0",
    "rate-limiter-flexible": "^0.21.3",
    "tld-extract": "^2.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^10.0.0",
    "@types/mocha": "^10.0.1",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "concurrently": "^7.6.0",
    "copy-and-watch": "^0.1.6",
    "cypress-mailslurp": "^1.5.0",
    "nodemon": "^2.0.20",
    "prettier": "^1.19.1",
    "ts-mocha": "^10.0.0"
  }
}
